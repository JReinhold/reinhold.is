---
import BaseHead from '../components/base-head.astro';
import LazyBackgroundImage from '../components/lazy-background-image.astro';

import Hero from '../components/index-sections/hero.astro';
import SocialLinks from '../components/index-sections/social-links.astro';
import AboutMe from '../components/index-sections/about-me/about-me-section.svelte';
import FakeWriting from '../components/index-sections/fake-writing/fake-writing-section.astro';
import Ratings from '../components/index-sections/ratings/ratings-section.astro';
import Footer from '../components/footer.astro';

let title = 'Jeppe Reinhold';
let description = "reinhold.is Jeppe's Personal Website";
let permalink = 'https://reinhold.is/';
---

<html lang='en'>
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
  </head>

  <body>
    <div class='sections-container'>
      <LazyBackgroundImage />
      <Hero />
      <SocialLinks />
      <AboutMe client:idle />
      <FakeWriting client:visible />
      <Ratings />
      <Footer />
    </div>
    <style>
      .sections-container {
        display: flex;
        flex-direction: column;
        align-items: stretch;
        gap: var(--size-fluid-3);
        max-width: calc(75ch + var(--size-fluid-2));
        margin: auto;
        padding: var(--size-7) 0;
      }
    </style>
  </body>
</html>
