---
const lowResImageDataURL =
  "data:image/webp;base64,";
---

<script>
  const highResImage = new Image();
  // this line here triggers the browser to load the image
  highResImage.src = "/assets/bg.webp";

  // when it is done loading, replace the existing image with the high res and unblur it
  highResImage.onload = () => {
    const backgroundImageElement = document.querySelector("#background-image");
    backgroundImageElement.src = highResImage.src;
    backgroundImageElement.classList.remove("blur");
  };
</script>

<img id="background-image" class="blur" src={lowResImageDataURL} />

<style>
  img {
    z-index: -1;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    transition: 2.5s filter ease-out;
    user-select: none;
    object-fit: cover;
    pointer-events: none;
  }

  .blur {
    filter: blur(20px);
  }
</style>
