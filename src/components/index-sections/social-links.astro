<style>
  div {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(10rem, 1fr));
    align-items: center;
    gap: var(--size-4);
  }

  a {
    display: flex;
    flex-direction: row;
    align-content: center;
    gap: var(--size-1);
  }

  [astro-icon] {
    width: var(--size-4);
  }
</style>
