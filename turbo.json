{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["build/**/*"]
    },
    "preview": {
      "dependsOn": ["build"]
    },
    "format:check": {},
    "lint": {
      "inputs": ["src/**/*", ".eslintrc.cjs", ".eslintignore"]
    },
    "svelte-check": {
      "inputs": ["src/**", "svelte.config.js", "tsconfig.json"]
    },
    "type-check": {
      "inputs": ["src/**/*", "tsconfig.json"]
    },
    "test": {
      "inputs": [
        "src/**",
        "playwright.config.ts",
        "svelte.config.js",
        "tsconfig.json"
      ]
    },
    "validate-all": {
      "dependsOn": [
        "format:check",
        "lint",
        "svelte-check",
        "type-check",
        "test"
      ]
    }
  }
}
